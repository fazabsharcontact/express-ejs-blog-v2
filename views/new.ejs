<%- include("partials/header", { title: "Create New Post" }) %>

<div class="max-w-xl mx-auto">
  <div class="bg-white p-6 rounded-lg shadow border border-gray-100">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">
      Create New Post
    </h2>

    <form action="/posts" method="POST" class="space-y-5">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Title
        </label>
        <input
          type="text"
          name="title"
          placeholder="Post title"
          required
          class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-green-400"
        >
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Content
        </label>
        <textarea
          name="content"
          placeholder="Write your post content here..."
          required
          class="w-full border border-gray-300 p-2 rounded h-40 resize-none focus:outline-none focus:ring-2 focus:ring-green-400"
        ></textarea>
      </div>

      <div class="flex items-center gap-4">
        <button
          type="submit"
          class="bg-green-500 text-white px-5 py-2 rounded hover:bg-green-600 transition"
        >
          Save Post
        </button>

        <a
          href="/"
          class="text-gray-600 hover:text-gray-900 underline"
        >
          Back
        </a>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer") %>